@model Hotel_IPT.Models.Fotos

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Fotos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create"  method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fotografia" class="control-label"></label>
                @* código original, criado pela Template
            <input asp-for="Fotografia" class="form-control" />  *@
                <input type="file" name="fotoQuarto" accept=".jpg,.jpeg,.png" style="color:blue;" />
                <span asp-validation-for="Fotografia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuartoFK" class="control-label"></label>
                <select asp-for="QuartoFK" class="form-control" asp-items="ViewBag.QuartoFK"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
