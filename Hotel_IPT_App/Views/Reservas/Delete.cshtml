@model Hotel_IPT_App.Models.Reservas

@{
    ViewData["Title"] = "Delete";
    string selecionado = "";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Reservas</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataInicial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataInicial)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataFim)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataFim)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NPessoas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NPessoas)
        </dd>
        @*<dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>*@
        @*<dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Id)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Quartos</label>
        </dt>
        <dd>
            @* listar os quartos, e confrontar essa lista com os quartos a que a reserva está associada *@
            @foreach (Quartos item in ViewBag.ListaDeQuartos)
            {
                if (Model.ListaQuartos.Contains(item)) { selecionado = "checked"; }

                <br /> <input type="checkbox" value="@item.IdQuarto" name="QuartoEscolhido" @selecionado disabled /> @item.Descricao

                selecionado = "";
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdReserva" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
