@model IEnumerable<Hotel_IPT.Models.Reservas>

@{
    ViewData["Title"] = "Reservas";
}
<h1>Reservas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataInicial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NPessoas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataInicial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataFim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NPessoas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdReserva">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdReserva">Details</a> 
                    @* | <a asp-action="Delete" asp-route-id="@item.IdReserva">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
