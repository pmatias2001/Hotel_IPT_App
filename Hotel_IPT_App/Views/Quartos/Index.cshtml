@model IEnumerable<Hotel_IPT_App.Models.Quartos>

@{
    ViewData["Title"] = "Quartos";
}

<h1>Quartos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Piso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lotacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Piso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lotacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdQuarto">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdQuarto">Detalhes</a>
                | <a asp-action="Delete" asp-route-id="@item.IdQuarto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
